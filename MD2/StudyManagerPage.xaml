<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MD2.StudyManagerPage"
             Title="StudyManagerPage"
             NavigatedTo="ContentPage_NavigatedTo">
    <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <VerticalStackLayout>
            <!--TODO: Buttons for StudyXMLDataManager methods -->
            <Button x:Name="btnPrint" Text="Print" Clicked="btnPrint_Clicked" />
            <Button x:Name="btnLoad" Text="Load" Clicked="btnLoad_Clicked" />
            <Button x:Name="btnSave" Text="Save" Clicked="btnSave_Clicked" />
            <Button x:Name="btnCreateTestData" Text="Create test data" Clicked="btnCreateTestData_Clicked" />
            <Button x:Name="btnReset" Text="Reset" Clicked="btnReset_Clicked" />
            <!-- Asked Copilot how to make Editor scrollable and take up the free screen space -->
            <Editor 
                Text=""
                x:Name="ediText"
                VerticalOptions="FillAndExpand" 
                HorizontalOptions="FillAndExpand"
                IsReadOnly="True"
                AutoSize="TextChanges"
            />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>